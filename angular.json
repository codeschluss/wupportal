{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "defaultProject": "@wooportal/client",
  "projects": {
    "@wooportal/client": {
      "prefix": "",
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "schematics": {
        "@nativescript/schematics:component": {
          "styleext": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "configurations": {
            "production": {
              "buildOptimizer": true,
              "optimization": true
            }
          },
          "options": {
            "aot": true,
            "deleteOutputPath": false,
            "extractCss": true,
            "extractLicenses": false,
            "index": "res/Web/index.html",
            "main": "src/client.ts",
            "namedChunks": false,
            "ngswConfigPath": "service.json",
            "outputHashing": "none",
            "outputPath": "platforms/web/browser",
            "polyfills": "src/tools/polyfills.ts",
            "serviceWorker": true,
            "tsConfig": "tsconfig.json",
            "vendorChunk": true,
            "assets": [
              {
                "glob": "*.xliff",
                "input": "res/All/i18n",
                "output": "/i18n"
              },
              {
                "glob": "**/*",
                "input": "res/All/images",
                "output": "/images"
              },
              {
                "glob": "**/*",
                "input": "res/Web/assets",
                "output": "/"
              },
              {
                "glob": "**/*",
                "input": "res/Web/images",
                "output": "/images"
              },
              {
                "glob": "**/*",
                "input": "res/Web/videos",
                "output": "/videos"
              }
            ],
            "styles": [
              {
                "input": "src/app.scss",
                "bundleName": "css/theme"
              }
            ]
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "@wooportal/client:build"
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "@wooportal/client:build",
            "i18nFormat": "xliff",
            "i18nLocale": "root",
            "outFile": "strings.xliff",
            "outputPath": "res/All/i18n"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "server": {
          "builder": "@angular-builders/custom-webpack:server",
          "configurations": {
            "production": {
              "optimization": {
                "scripts": true,
                "styles": true
              }
            }
          },
          "options": {
            "main": "src/server.ts",
            "outputPath": "platforms/web/server",
            "tsConfig": "server.json",
            "customWebpackConfig": {
              "path": "sys/app/conf/server.js"
            },
            "fileReplacements": [
              {
                "replace": "src/client.router.ts",
                "with": "src/server.router.ts"
              }
            ]
          }
        }
      }
    },
    "@wooportal/app": {
      "root": "sys/app",
      "sourceRoot": "sys/app",
      "projectType": "library",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "tsconfig.json",
            "project": "sys/app/ng-package.json"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "@wooportal/core": {
      "root": "sys/core",
      "sourceRoot": "sys/core",
      "projectType": "library",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "tsconfig.json",
            "project": "sys/core/ng-package.json"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "@wooportal/editor": {
      "root": "sys/editor",
      "sourceRoot": "sys/editor",
      "projectType": "library",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-webpack:webpack",
          "options": {
            "webpackConfig": "sys/editor/conf/webpack.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  }
}
