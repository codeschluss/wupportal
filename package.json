{
  "name": "wupportal",
  "version": "0.1.1",
  "description": "An informative portal for new citizens in Wuppertal",
  "homepage": "https://www.wupportal.org",
  "author": {
    "name": "codeschluss",
    "email": "info@codeschluss.de",
    "url": "https://www.codeschluss.de"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codeschluss/wupportal"
  },
  "bugs": {
    "email": "info@codeschluss.de",
    "url": "https://github.com/codeschluss/wupportal/issues"
  },
  "config": {
    "api": {
      "rootUrl": "/api",
      "authUrl": "/api/login",
      "refreshUrl": "/api/refresh"
    },
    "jwtClaims": {
      "activityProvider": "createdActivities",
      "organisationAdmin": "adminOrgas",
      "organisationUser": "approvedOrgas",
      "superUser": "superuser",
      "userId": "id"
    },
    "defaults": {
      "appUrl": "https://www.wupportal.org",
      "city": "Wuppertal",
      "language": "de",
      "title": "Wupportal"
    }
  },
  "nativescript": {
    "id": "de.codeschluss.wupportal",
    "tns-android": {
      "version": "6.3.1"
    },
    "tns-ios": {
      "version": "6.3.0"
    }
  },
  "android": {
    "markingMode": "none"
  },
  "scripts": {
    "ng": "ng",
    "ns": "ns",
    "lint": "ng lint",
    "clean": "git clean -dfX",
    "start": "npm run start:app",
    "build:api": "ng-swagger-gen -c swagger.json",
    "build:app": "ng build --prod @wooportal/client",
    "build:ios": "ns platform add ios ||:&& ns build ios",
    "build:oid": "ns platform add android ||:&& ns build android",
    "build:lib": "for i in libs/*; do ng build @wooportal/${i#libs/}; done",
    "build:ssr": "ng run @wooportal/client:server && tsc -p express.json",
    "build:xlf": "ng xi18n && sed -i '/context/d' res/All/i18n/strings.xliff",
    "start:oid": "ns platform add android ||:&& ns debug android",
    "start:ios": "ns platform add ios ||:&& ns debug ios",
    "start:app": "ng serve --host 0.0.0.0 --port",
    "start:ssr": "node target/express"
  },
  "dependencies": {
    "@angular/animations": "8.2.14",
    "@angular/cdk": "8.2.3",
    "@angular/common": "8.2.14",
    "@angular/compiler": "8.2.14",
    "@angular/core": "8.2.14",
    "@angular/forms": "8.2.14",
    "@angular/material": "8.2.3",
    "@angular/platform-browser": "8.2.14",
    "@angular/platform-browser-dynamic": "8.2.14",
    "@angular/platform-server": "8.2.14",
    "@angular/router": "8.2.14",
    "@fortawesome/angular-fontawesome": "0.5.0",
    "@fortawesome/fontawesome-svg-core": "1.2.26",
    "@fortawesome/free-brands-svg-icons": "5.12.0",
    "@fortawesome/free-solid-svg-icons": "5.12.0",
    "@nguniversal/common": "8.2.6",
    "@nguniversal/express-engine": "8.2.6",
    "@nguniversal/module-map-ngfactory-loader": "8.2.6",
    "@ngx-pwa/local-storage": "8.2.4",
    "@ngx-translate/i18n-polyfill": "1.0.0",
    "@wooportal/core": "file:libs/core",
    "@wooportal/editor": "file:libs/editor",
    "@wooportal/forms": "file:libs/forms",
    "@wooportal/native": "file:libs/native",
    "color-convert": "1.9.3",
    "express": "4.17.1",
    "express-robots-txt": "0.4.1",
    "rxjs": "6.5.4",
    "zone.js": "0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.803.24",
    "@angular/cli": "8.3.24",
    "@angular/compiler-cli": "8.2.14",
    "@angular/service-worker": "8.2.14",
    "@types/node": "13.7.0",
    "codelyzer": "5.2.1",
    "core-js": "3.6.4",
    "moment": "2.24.0",
    "ng-swagger-gen": "1.8.1",
    "ngx-openlayers": "1.0.0-next.13",
    "normalize.css": "8.0.1",
    "ol": "6.1.1",
    "tslint": "5.20.1",
    "typescript": "3.5.3"
  }
}
