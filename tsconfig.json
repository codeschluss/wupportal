{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "fullTemplateTypeCheck": true,
    "skipTemplateCodegen": true,
    "strictInjectionParameters": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "platforms/web",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@wooportal/*": [
        "platforms/web/@wooportal/*"
      ]
    }
  },
  "exclude": [
    "**/*.android.ts",
    "**/*.ios.ts",
    "**/*.tns.ts"
  ]
}
